{{#each post as |post| }}
<div class="row mb-4 post">
    <div class="col-md-5">
        <h2>
            {{{format_date}}}
            <a href="/post/{{post.id}}">{{post.title}}</a>
        </h2>
        <p>created by {{username}} on {{format_date post.date_created}}</p>
    </div>
    <div class="col-md-7">
        <p>
            {{post.content}}
        </p>
    </div>
</div>
{{/each}}